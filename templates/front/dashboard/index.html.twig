{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div id="summary-chart"></div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="page-header">
                            <h2>Activity</h2>
                        </div>
                        <table class="table table-bordered table-condensed">
                            <tr>
                                <th colspan="2">{{ 'now'|date('M Y') }}</th>
                            </tr>
                            <tr>
                                <td>Payée</td><td>{{ sum.month.paid|price }}</td>
                            </tr>
                            <tr>
                                <td>En attente</td><td>{{ sum.month.not_paid|price }}</td>
                            </tr>
                            <tr>
                                <th colspan="2">{{ 'now'|date('Y') }}</th>
                            </tr>
                            <tr>
                                <td>Payée</td><td>{{ sum.year.paid|price }}</td>
                            </tr>
                            <tr>
                                <td>En attente</td><td>{{ sum.year.not_paid|price }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="page-header">
                            <h2>Current projects</h2>
                        </div>
                        <table class="table table-bordered table-condensed">
                            <tr>
                                <th>Name</th>
                                <th>Budget</th>
                                <th>Ends At</th>
                            </tr>
                            {% for project in projects %}
                                <tr>
                                    <td>{{ project.name }}</td>
                                    <td>{{ project.budget|price }}</td>
                                    <td>{{ project.endsAt|date('M d Y') }}</td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3"><em>No projects</em></td></tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="page-header">
                            <h2>Last invoices</h2>
                        </div>
                        <table class="table table-bordered table-condensed">
                            <tr>
                                <th>Code</th>
                                <th>Amount</th>
                                <th>Name</th>
                            </tr>
                            {% for invoice in invoices %}
                                <tr>
                                    <td>{{ invoice.code }}</td>
                                    <td>{{ invoice.amount|price }}</td>
                                    <td>{{ invoice.project.name }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>
    <script>
        {% spaceless %}
        var data = {
            labels: [{% for l in charts.summary.labels %}'{{ l|e('js') }}'{% if not loop.last %},{% endif %}{% endfor %}],
            series: [{% for s in charts.summary.series %}[{% for d in s %}{{ d|e('js') }}{% if not loop.last %},{% endif %}{% endfor %}]{% if not loop.last %},{% endif %}{% endfor %}]
        };
        {% endspaceless %}
        var options = {
            height: 400
        };
        new Chartist.Bar('#summary-chart', data, options);
    </script>
{% endblock %}